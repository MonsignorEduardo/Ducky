{
    "compilerOptions": {
        "outDir": "./build",
        "rootDir": "./src",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "target": "es2022",
        "sourceMap": true,
        "skipLibCheck": true,
        "declaration": true,
        "pretty": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["./prisma", "./build"]
}
